{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/**/__tests__/**",
    "src/**/__mocks__/**"
  ]
}
